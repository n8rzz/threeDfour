# .editorconfig for Ruby on Rails projects
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.html.erb]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Gemfile]
indent_style = space
indent_size = 2

[Rakefile]
indent_style = space
indent_size = 2
