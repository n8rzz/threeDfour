<%= render "devise/shared/form_container" do %>
  <h2 class="text-xl mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block mb-1" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block mb-1" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "border w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "Log in", class: "border w-full" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
