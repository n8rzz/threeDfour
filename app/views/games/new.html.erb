<div class="max-w-lg mx-auto">
  <h1 class="text-3xl font-bold mb-6">Create New Game</h1>

  <div class="bg-white shadow rounded-lg p-6 border border-gray-200">
    <%= form_with(model: @game, local: true, class: "space-y-6") do |f| %>
      <% if @game.errors.any? %>
        <div class="bg-red-50 text-red-500 p-4 rounded-lg mb-6">
          <h2 class="text-lg font-medium mb-2">
            <%= pluralize(@game.errors.count, "error") %> prevented this game from being saved:
          </h2>
          <ul class="list-disc list-inside">
            <% @game.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="flex justify-end space-x-4">
        <%= f.submit "Create Game", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded" %>
        <%= link_to "Cancel", my_games_games_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-6 rounded" %>
      </div>
    <% end %>
  </div>
</div>
