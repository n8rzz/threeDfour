<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">Available Games</h1>
    <%= link_to 'New Game', new_game_path, class: 'bg-green-500 text-white px-4 py-2 rounded' %>
  </div>

  <div class="mb-8">
    <%= link_to 'View My Games', my_games_games_path, class: 'text-blue-500 hover:underline' %>
  </div>

  <% if @games.any? %>
    <div class="space-y-4">
      <%= render partial: 'game', collection: @games %>
    </div>
  <% else %>
    <p class="text-gray-600">No games available to join.</p>
  <% end %>
</div>
