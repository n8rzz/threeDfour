<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">My Games</h1>
    <%= link_to 'New Game', new_game_path, class: 'bg-green-500 text-white px-4 py-2 rounded' %>
  </div>

  <div class="mb-8">
    <%= link_to 'View Available Games', games_path, class: 'text-blue-500 hover:underline' %>
  </div>

  <% if @games.any? %>
    <div class="space-y-4">
      <% @games.group_by(&:status).each do |status, games| %>
        <div class="mb-8">
          <h2 class="text-xl font-semibold mb-4 capitalize"><%= status %> Games</h2>
          <%= render partial: 'game', collection: games %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">You don't have any games yet.</p>
  <% end %>
</div>
